{% comment %} Custom Announcement Bar with 3 Columns, Dynamic Icons, and Text {% endcomment %}

{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "horizontal",
          "label": "Horizontal"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        }
      ],
      "default": "horizontal",
      "label": "Layout for columns"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "default": 4,
      "unit": "rem"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment for columns"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Column Text",
          "default": "Enter text here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Announcement Bar",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .custom-announcement-bar {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 20px 0;
    text-align: {{ section.settings.text_alignment }};
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
  }

  .announcement-column {
    flex: 1 1 30%;
    max-width: 30%;
    padding: 10px;
    text-align: center;
  }

  .announcement-column img {
    width: calc({{ section.settings.icon_size }}rem);
    height: auto;
    margin-bottom: 10px;
  }

  .announcement-column a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
  }

  @media only screen and (max-width: 600px) {
    .announcement-column {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>

<div class="custom-announcement-bar">
  {% for block in section.blocks %}
    <div class="announcement-column" {{ block.shopify_attributes }}>
      {% if block.settings.icon %}
        {% if block.settings.link %}
          <a href="{{ block.settings.link }}">
            <img
              src="{{ block.settings.icon | img_url: 'master' }}"
              alt="{{ block.settings.text | escape }}"
              loading="lazy"
            >
          </a>
        {% else %}
          <img
            src="{{ block.settings.icon | img_url: 'master' }}"
            alt="{{ block.settings.text | escape }}"
            loading="lazy"
          >
        {% endif %}
      {% endif %}
      {% if block.settings.text %}
        {% if block.settings.link %}
          <a href="{{ block.settings.link }}">
            <p>{{ block.settings.text }}</p>
          </a>
        {% else %}
          <p>{{ block.settings.text }}</p>
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
</div>
